{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "layer" : "overlay",
    "layer-shell": true,
    "notification-icon-size": 32,
    "notification-body-image-height": 160,
    "notification-body-image-width": 200,
    "control-center-margin-bottom": 200,
    "control-center-margin-right": 0,
    "control-center-margin-left": 0,
    "timeout": 1,
    "timeout-low": 5,
    "timeout-critical": 5,
    "fit-to-screen": true,
    "control-center-width": 450,
    "control-center-height": 1000,
    "notification-window-width": 370,
    "keyboard-shortcuts": true,
    "image-visibility": "when-available",
    "transition-time": 300,
    "hide-on-clear": true,
    "hide-on-action": true,
    "script-fail-notify": true,
    "widgets": [
        "title",
        "dnd",
        "notifications",
    "mpris",
        "volume",
        "backlight"
    ],
    "widget-config": {
        "title": {
            "text": "Notifications",
            "clear-all-button": true,
            "button-text": "󰎟"
        },
        "dnd": {
            "text": ""
        },
        "label": {
            "max-lines": 3,
            "text": ""
        },
        "mpris": {
            "image-size": 200,
            "image-radius": 12
        },
        "volume": {
            "label": " 󰕾 "
        },
        "backlight": {
            "label": " 󰃟 "
        },
        "buttons-grid": {
            "actions": [
                {
                    "label": "",
                    "command": "nm-connection-editor"
                },
                {
                    "label": "󰊫",
                    "command": "swaync-client -t && chromium --new-window https://mail.google.com/mail/u/0/#inbox"
                },
                {
                    "label": "",
                    "command": "firefox https://calendar.notion.so/"
                },
                {
                    "label": "",
                    "command": "nautilus --new-window"
                },
                {
                    "label": "󰂯",
                    "command": "blueman-manager"
                }

            ]
        }
    }
}
